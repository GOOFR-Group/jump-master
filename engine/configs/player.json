{
  "$schema": "./schemas/player.json",
  "object": {
    "position": {
      "x": 0,
      "y": 0
    },
    "colliderSize": {
      "x": 42,
      "y": 84
    },
    "colliderOffset": {
      "x": -21,
      "y": -45.5
    },
    "rendererSize": {
      "x": 96,
      "y": 96
    },
    "mass": 10,
    "drag": 1
  },
  "movement": {
    "speed": 13000
  },
  "jump": {
    "impulse": 300000,
    "minImpulse": 35000,
    "maxImpulse": 90000,
    "diagonalAngle": 75
  },
  "knockBack": {
    "impulse": 30000,
    "diagonalAngle": 30
  },
  "animations": {
    "idle": {
      "repeat": true,
      "duration": 0.4,
      "frames": [
        "/images/player/idle/0.png",
        "/images/player/idle/1.png"
      ]
    },
    "walk": {
      "repeat": true,
      "duration": 0.1,
      "frames": [
        "/images/player/walk/0.png",
        "/images/player/walk/1.png",
        "/images/player/walk/2.png",
        "/images/player/walk/3.png"
      ]
    },
    "jumpHold": {
      "repeat": false,
      "duration": 0,
      "frames": [
        "/images/player/jump-hold/0.png"
      ]
    },
    "jump": {
      "repeat": false,
      "duration": 0,
      "frames": [
        "/images/player/jump/0.png"
      ]
    },
    "jumpFall": {
      "repeat": false,
      "duration": 0.15,
      "frames": [
        "/images/player/jump-fall/0.png",
        "/images/player/jump-fall/1.png"
      ]
    },
    "knockBack": {
      "repeat": false,
      "duration": 0,
      "frames": [
        "/images/player/knock-back/0.png"
      ]
    }
  }
}